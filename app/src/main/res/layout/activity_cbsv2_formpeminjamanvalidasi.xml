<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cbsv2_formpeminjamanvalidasi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.surya.cbsv2.CBSv2_FormPeminjamanValidasi_Activity">

    <!--Bagian atas / header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <fragment
            android:id="@+id/fragment_cbsv2_formpeminjamanvalidasi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.example.surya.cbsv2.CBSv2_FormPeminjamanValidasi_Fragment"
            tools:layout = "@layout/fragment_cbsv2_formpeminjamanvalidasi"
            ></fragment>
    </LinearLayout>
    <!--End of Bagian atas / header-->



    <!--Bagian body-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:id="@+id/tv_namakelas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=""
                            android:gravity="center"
                            android:textSize="24dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Peminjaman dari"
                            android:textSize="30dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <!--ll 1-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Tanggal"
                                android:textSize="24dp"
                                />


                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=":"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/tv_tanggalpinjam"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:gravity="center"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <!--end of ll 1-->

                    <!--ll 2-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Jam"
                                android:textSize="24dp"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=":"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/tv_jampinjam"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:gravity="center"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <!--end of ll 2-->

                    <!--ll 3-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Hingga"
                            android:textSize="30dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                    <!--end of ll 3-->

                    <!--ll 4-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Tanggal"
                                android:textSize="24dp"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=":"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/tv_tanggalkembali"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:gravity="center"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <!--end of ll 4-->

                    <!--ll 5-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Jam"
                                android:textSize="24dp"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=":"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            >

                            <TextView
                                android:id="@+id/tv_jamkembali"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:gravity="center"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <!--end of ll 5-->


                    <!--ll 7-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >

                        <Button
                            android:id="@+id/btn_batal"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Batal"
                            android:layout_marginRight="10dp"
                            />
                        <Button
                            android:id="@+id/btn_pinjam"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Pinjam"
                            android:layout_marginLeft="10dp"
                            />
                    </LinearLayout>
                    <!--end of ll 7-->


                </LinearLayout>


            </LinearLayout>
            <!--End of Bagian body-->


        </LinearLayout>
        <!--<fragment-->
        <!--android:id="@+id/fragment_cbsv2_formpeminjamanvalidasi"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--class="com.example.surya.cbsformpeminjaman.CBSv2_FormPeminjamanValidasi_Fragment"-->
        <!--tools:layout="@layout/fragment_cbsv2_formpeminjamanvalidasi"-->
        <!--&gt;</fragment>-->
    </LinearLayout>

</LinearLayout>
